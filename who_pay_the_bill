// Define a function that randomly selects a person from a list of names and generates a lunch message.
function whoospaying(names) {
  var numberofpeople = names.length;  // Get the number of people in the names array.
  var randompersonposition = Math.floor(Math.random() * numberofpeople);  // Generate a random index.
  var randomperson = names[randompersonposition];  // Retrieve a random person's name.
  return randomperson + " is going to buy lunch";  // Create and return the lunch message.
}

var names = ["Alice", "Bob", "Charlie", "David"];  // Define an array of names.
console.log(whoospaying(names));  // Call the function and print the lunch message to the console.
